    "bindings": {
      "alt-p": [
        "projects::OpenRecent",
        {
          "create_new_window": false
        }
      ]
    }
  },
  {
    "bindings": {
      "alt-,": "zed::OpenSettings"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-tab": null
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-tab": null
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-k ctrl-s": null
    }
  },
  {
    "bindings": {
      "alt-<": "zed::OpenKeymap"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "alt-o": "command_palette::Toggle"
    }
